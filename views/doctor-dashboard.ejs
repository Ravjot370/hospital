<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Doctor Dashboard - Hospital Management System</title>
  <link rel="stylesheet" href="/css/styles.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f0f8ff;
    }
    header {
      background: #007bff;
      color: #fff;
      padding: 20px 0;
      text-align: center;
      border-bottom: 5px solid #0056b3;
    }
    header h1 {
      margin: 0;
      font-size: 2em;
    }
    .container {
      width: 80%;
      margin: auto;
      overflow: hidden;
      padding: 20px;
    }
    .profile, .patients, .appointments {
      background: #fff;
      padding: 20px;
      margin: 20px 0;
      border-radius: 8px;
      box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }
    .profile h2, .patients h2, .appointments h2 {
      border-bottom: 3px solid #007bff;
      padding-bottom: 10px;
      color: #007bff;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin: 20px 0;
    }
    table, th, td {
      border: 1px solid #ddd;
    }
    th, td {
      padding: 10px;
      text-align: left;
    }
    th {
      background: #007bff;
      color: #fff;
    }
    tr:nth-child(even) {
      background-color: #f2f2f2;
    }
    .button {
      display: inline-block;
      padding: 10px 20px;
      margin: 10px 0;
      border-radius: 5px;
      color: #fff;
      background-color: #007bff;
      text-decoration: none;
      font-weight: bold;
      text-align: center;
    }
    .button:hover {
      background-color: #0056b3;
    }
  </style>
</head>
<body>
  <header>
    <h1>Welcome, <%= doctor.firstName %> <%= doctor.lastName %></h1>
  </header>
  <div class="container">
    <div class="profile">
      <h2>Profile</h2>
      <!-- Profile data will be injected here -->
      <p><strong>Name:</strong> <%= doctor.firstName %> <%= doctor.lastName %></p>
      <p><strong>Specialization:</strong> <%= doctor.specialization %></p>
      <p><strong>Email:</strong> <%= doctor.email %></p>
      <p><strong>Phone:</strong> <%= doctor.phoneNumbers.join(', ') %></p>
    </div>

    <div class="patients">
      <h2>Patients Assigned</h2>
      <!-- Patient data will be injected here -->
      <table>
        <thead>
          <tr>
            <th>Patient ID</th>
            <th>Name</th>
            <th>Age</th>
            <th>Condition</th>
          </tr>
        </thead>
        <tbody>
          <% if (patients.length > 0) { %>
            <% patients.forEach(patient => { %>
              <tr>
                <td><%= patient.patientID %></td>
                <td><%= patient.firstName %> <%= patient.lastName %></td>
                <td><%= patient.age %></td>
                <td><%= patient.condition %></td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="4">No patients assigned.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>

    <div class="appointments">
      <h2>Upcoming Appointments</h2>
      <!-- Link to view appointments -->
      <a href="/view-appointments" class="button">View All Appointments</a>
    </div>
  </div>
</body>
</html>
