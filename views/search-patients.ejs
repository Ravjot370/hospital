<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Search Patients - Hospital Management System</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <header>
    <h1>Search Patients</h1>
    <nav>
      <a href="/">Home</a>
      <a href="/patients">Patients</a>
    </nav>
  </header>
  <div class="container">
    <form action="/search-patients" method="GET">
      <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name">
      </div>
      <div class="form-group">
        <label for="id">Patient ID:</label>
        <input type="text" id="id" name="id">
      </div>
      <div class="form-group">
        <label for="phoneNumber">Phone Number:</label>
        <input type="text" id="phoneNumber" name="phoneNumber">
      </div>
      <button type="submit" class="btn">Search</button>
    </form>
  </div>
  <div class="container">
    <h2>Search Results</h2>
    <% if (patients.length > 0) { %>
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone Numbers</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% patients.forEach(patient => { %>
            <tr>
              <td><%= patient.firstName %> <%= patient.lastName %></td>
              <td><%= patient.email %></td>
              <td><%= patient.phoneNumbers.join(', ') %></td>
              <td>
                <a href="/update-patient/<%= patient._id %>">Update</a> |
                <a href="/view-patient/<%= patient._id %>">View</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <p>No patients found.</p>
    <% } %>
  </div>
</body>
</html>
