<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Appointments</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <div class="container">
    <header>
      <h1>Manage Appointments</h1>
    </header>
    <main>
      <table class="appointment-table">
        <thead>
          <tr>
            <th>Date</th>
            <th>Duration</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% appointments.forEach(appointment => { %>
            <tr>
              <td><%= new Date(appointment.appointmentDate).toDateString() %></td>
              <td><%= appointment.appointmentDuration %></td>
              <td>
                <a href="/edit-appointment/<%= appointment.appointmentID %>" class="btn btn-edit">Edit</a> 
                <a href="/delete-appointment/<%= appointment.appointmentID %>" class="btn btn-delete">Delete</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </main>
  </div>
</body>
</html>
